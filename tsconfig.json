{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "user/user": [
        "libs/user/src"
      ],
      "user/user/*": [
        "libs/user/src/*"
      ],
      "@app/rent": [
        "libs/rent/src"
      ],
      "@app/rent/*": [
        "libs/rent/src/*"
      ],
      "@app/vehicle": [
        "libs/vehicle/src"
      ],
      "@app/vehicle/*": [
        "libs/vehicle/src/*"
      ],
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ]
    }
  }
}